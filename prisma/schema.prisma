generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URI")
}

model Comment {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  content   String
  authorId  String
  gameId    String
  parentId  String?

  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
  userId    String   @db.ObjectId

  replies   Comment[] @relation("ReplyRelation")
  parent    Comment?  @relation("ReplyRelation", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  game      Game      @relation(fields: [gameId], references: [id])
}

model Game {
  id       String     @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  comments Comment[]
}

model User {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  email String  @unique
  name  String?
  comments Comment[]
}

